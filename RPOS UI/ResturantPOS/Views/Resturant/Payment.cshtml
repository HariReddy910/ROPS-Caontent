
@{
    ViewBag.Title = "ProductEntry12";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<center><h1> Payment entry</h1></center>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form class="form-horizontal">
                <h5 style="text-align: center;"><b>Supplier Info</b></h5>
                <div class="form-group">
                    <label for="Suplier ID" class="col-sm-4 control-label">Suplier ID</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Suplier ID" placeholder="" style="width:10%;">
                        <button type="button" class="btn btn-success"style="margin-top:-60px; margin-left:160px; "> Sign In.</button>
                    
                    </div>
                   
                       
                   
                </div>
                <div class="form-group">
                    <label for="Suplier Name" class="col-sm-4 control-label">Suplier Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Suplier Name" placeholder="Required Supplier Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Address" class="col-sm-4 control-label">Address</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ContactNo" class="col-sm-4 control-label">Contact No</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Suplier Name" placeholder="Required contact No">
                    </div>
                    
                </div>
                <div class="form-group">
                    <label for="Suplier Name" class="col-sm-4 control-label">Remarks</label>
                    <div class="col-sm-8">
                        <textarea rows="6" cols="50"></textarea>
                    </div>
                </div>
                
                <div class="col-sm-offset-2 col-sm-6">
                    <h4>Balance:   0.00</h4>
                </div>

                   
</form>

        </div>
        <div class="col-md-6">
            <form class="form-horizontal">
                <div class="form-group">
                    <h5 style="text-align: center;"><b>Transaction Info</b></h5>
                    <label for="Transation No" class="col-sm-4 control-label">Transaction No</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Suplier Name" placeholder="Required Transation No">
                    </div>

                </div>


                <div class="form-group">
                    <label for="Suplier Name" class="col-sm-4 control-label">Transaction Date</label>
                    <div class="col-sm-8">
                        <input type="date" name="date" placeholder=" date">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Suplier Name" class="col-sm-4 control-label">Category</label>
                    <div class="col-sm-6">
                        <select id="myList"style="width:100%;">
                            <option value="1">one</option>
                            <option value="2">two</option>
                            <option value="3">three</option>
                            <option value="4">four</option>
                        </select>
                    </div>
                    </div>

                    <div class="form-group">
                        <label for="ContactNo" class="col-sm-4 control-label">Amount</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control " id="Suplier Name" placeholder="Requiored Amount">
                        </div>

                    </div>
                <div class="form-group">
                    <label for="Suplier Name" class="col-sm-4 control-label">Payment Mode Details</label>
                    <div class="col-sm-8">
                        <textarea rows="6" cols="50"></textarea>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10">
                        <button type="button" class="btn btn-success"><i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i> Save.</button>
                    </div>
                </div>
</form>

            
</div>
</div>
</div>







