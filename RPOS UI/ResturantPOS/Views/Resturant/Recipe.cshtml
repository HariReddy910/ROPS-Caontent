@{
    ViewBag.Title = "Recipe";
}
<head>
    <link href="~/Content/Recipe.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<h3>Recipe</h3>
<div class="container" style="margin-top: 13px;">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-4">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Recipe Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="RecipeName" placeholder="Required Recipe Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Item Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Item Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Category</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Category">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Fixed Cost</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Cost">
                    </div>
                </div>


            </form>
        </div>
        <div class="col-md-4">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Product Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Product Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Quantity</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control" id="#" placeholder="Required Quantity">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Unit</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control" id="#" placeholder="Required Unit">
                    </div>
                </div>



                <button id="controls-inner"><i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i><strong class="button-txt">Save</strong></button>
            </form>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>