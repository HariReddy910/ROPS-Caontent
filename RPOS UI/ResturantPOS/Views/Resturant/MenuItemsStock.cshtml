@model ResturantPOS.Models.Stock_Store
@{
    ViewBag.Title = "MenuitemsStock";
}




<head>
    <link href="~/Content/ResurantInfo.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<div class="container">
    <h3>Menu Item Stock</h3>
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputtext3" class="col-sm-4 control-label">Stock ID</label>
                    <div class="col-sm-8">
                    <!--    <input type="text" class="form-control stockid" id="inputext3" placeholder="Required Stock ID" >--->
                        @Html.TextBoxFor(s => s.St_ID, new { @class = "form-control stockid" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputtext3" class="col-sm-4 control-label">DATE</label>
                    <div class="col-sm-8">
                    </div>
                  <!--  <input type="date" class="form-control sdate" id="inputext3" placeholder="Required DATE">-->
                    @Html.TextBoxFor(s => s.Date, new { @class = "form-control sdate" })

                </div>
                <div class="form-group">
                    <label for="inputtext3" class="col-sm-4 control-label">Remarks</label>
                    <div class="col-sm-8">
                      <!--  <textarea class="form-control sremark" rows="3"></textarea>--->
                          
                        @Html.TextAreaFor(s => s.Remarks, new { @class = "form-control sremark" })
                    </div>
                </div>
                <button type="button" class="btn btn-success btn_save" style="margin-left: 35%;" id="menu_save"><i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i>New</button>
                <div class="form-group">
                    <label for="inputtext3" class="col-sm-4 control-label">Item Name</label>
                    <div class="col-sm-8">
                       <!-- <input type="text" class="form-control Type" id="inputtext3" placeholder="Required Item Name">--->
                     
                      
                        @*@Html.DropDownList("mydata")*@
                     
</div>
                </div>
                <div class="form-group">
                    <label for="inputtext3" class="col-sm-4 control-label">Quantity</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control sqty" id="inputtext3" placeholder="Required Quantity">
                    </div>
                </div>
                <button type="button" class="btn btn-success menu_save" style="margin-left: 35%;" id="menu_save"><i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i> Save.</button>
            </form>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    $('#menu_save').click(function () {

       
        var sname = $('#mydata').val();
       
        var iqty = $('.sqty').val();
      
        $.ajax({
            type: 'POST',
            url: '/Resturant/MenuItemsStock',
            data: {
               
                Sname:sname,
                Iqty:iqty
            },
           
            success: function (data) {

            },
        })
       
    });
</script>

<script>
    $('.btn_save').click(function () {
        alert();
        $.ajax({
            type: 'Get',
            url: '/Resturant/MenuItemsStock',
        })

    });
</script>

