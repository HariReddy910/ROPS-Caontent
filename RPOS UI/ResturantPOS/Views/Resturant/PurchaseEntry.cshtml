
@{
    ViewBag.Title = "PurchaseEntry";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <h3> Purchase Entry </h3>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Invoice No</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Required Invoice No">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Invoice Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" id="inputtext3">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Cash</label>
                        <div class="col-sm-8">
                            <select class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Remarks</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <button type="button" class="btn btn-success" style="margin-left:35%;"><i class="fa fa-floppy-o fa-2x" aria-hidden="true"></i> Save.</button>
                </form>
            </div>
            <div class="col-md-4">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Supplier ID</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Required Supplier ID">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Supplier Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Required Supplier Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Address</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">City</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Required  City">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Contact No</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Required Contact No">
                        </div>
                    </div>


                </form>
            </div>
            <div class="col-md-4">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Product Name</label>
                        <div class="col-sm-8">
                            <select class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Warehouse</label>
                        <div class="col-sm-8">
                            <select class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Quantity</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Required  Quantity">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Price Per Unit</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Required Price Per Unit">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Total Amount</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputtext3" placeholder="Required Total Amount">
                        </div>
                    </div>
                    <div class="checkbox">
                        <label style="margin-left: 34%;">
                            <input type="checkbox" value="">
                            Has Expiry Date?
                        </label>
                    </div>
                    <br><br>

                    <div class="form-group">
                        <label for="inputtext3" class="col-sm-4 control-label">Expiry Date</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" id="inputtext3">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>
</html>
