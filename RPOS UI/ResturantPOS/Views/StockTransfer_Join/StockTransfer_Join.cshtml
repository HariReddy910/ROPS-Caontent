@model ICollection<ResturantPOS.Models.StockTransfer_Join>


<link href="~/Content/StockIssues.css" rel="stylesheet" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<h2 style="text-align:center">Stock Issuse/Transfer</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Transfer ID</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Transfer ID">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Date</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control" id="#">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Section</label>
                    <div class="col-sm-8">
                        <select class="form-group-box">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Warehouse</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Warehouse">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Product Name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Product Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Expiry Date</label>
                    <div class="col-sm-8">
                        <input type="date" class="form-control" id="#" placeholder="Required Expiry Date">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Available Qty</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Qty">
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-4 control-label">Transfer Qty</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="#" placeholder="Required Qty">
                    </div>
                </div>
                <button id="controls-inner"><i class="fa fa-plus fa-2x" aria-hidden="true"></i><strong class="button-txt"> Add </strong></button><br><br>
            </form>
        </div>
        <div class="col-md-4">
            <div class="form-group" style="margin-left: -12px;">
                <label for="text" class="col-sm-8 control-label">Search by Product Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="#" placeholder="Required Name">
                </div>
            </div>
            <button id="controls-inner"><i class="fa fa-database fa-2x" aria-hidden="true"></i><strong class="button-txt">Get Data</strong></button>

        </div>
    </div>
</div>